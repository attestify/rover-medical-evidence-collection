---
- name: Ensure rover cloud evidence output directory exists
  ansible.builtin.file:
    path: "{{ evidence_root }}/{{ inventory_hostname }}/rover-cloud"
    state: directory
    mode: "0750"

- name: Collect cloud config (canned)
  ansible.builtin.copy:
    src: "{{ rover_system_root }}/{{ release }}/rover-cloud/cloud-config.yaml"
    dest: "{{ evidence_root }}/{{ inventory_hostname }}/rover-cloud/cloud-config.yaml"
    mode: "0640"