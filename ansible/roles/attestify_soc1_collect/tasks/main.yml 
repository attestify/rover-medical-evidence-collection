---
- name: Ensure SOC1 evidence output directory exists
  ansible.builtin.file:
    path: "{{ evidence_root }}/{{ inventory_hostname }}/rover-cloud"
    state: directory
    mode: "0750"

- name: Collect SOC1 report analysis (canned)
  ansible.builtin.copy:
    src: "{{ rover_system_root }}/{{ release }}/rover-cloud/soc1-report-analysis.json"
    dest: "{{ evidence_root }}/{{ inventory_hostname }}/rover-cloud/soc1-report-analysis.json"
    mode: "0640"