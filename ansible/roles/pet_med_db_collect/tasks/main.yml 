---
- name: Ensure DB evidence output directory exists
  ansible.builtin.file:
    path: "{{ evidence_root }}/{{ inventory_hostname }}/pet-medicine-db"
    state: directory
    mode: "0750"

- name: Collect DB config (canned)
  ansible.builtin.copy:
    src: "{{ rover_system_root }}/rover-medical-evidence-collection/rover-medical-system/{{ release }}/pet-medicine-db/my-db.ini"
    dest: "{{ evidence_root }}/pet-medicine-db/my-db.ini"
    mode: "0640"