---
- name: Ensure host evidence output directory exists
  ansible.builtin.file:
    path: "{{ evidence_root }}/{{ inventory_hostname }}/pet-medicine-host"
    state: directory
    mode: "0750"

- name: Collect host evidence files (canned)
  ansible.builtin.copy:
    src: "{{ item }}"
    dest: "{{ evidence_root }}/{{ inventory_hostname }}/pet-medicine-host/{{ item | basename }}"
    mode: "0640"
  with_fileglob:
    - "{{ rover_system_root }}/{{ release }}/pet-medicine-host/*.txt"
    